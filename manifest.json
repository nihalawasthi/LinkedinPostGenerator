{
  "manifest_version": 3,
  "name": "LinkedIn Post Generator",
  "version": "0.1.1",
  "description": "Automate LinkedIn posts with free AI-powered tech content",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "alarms",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.unsplash.com/*",
    "https://source.unsplash.com/*",
    "https://www.linkedin.com/*"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.unsplash.com/*",
    "https://source.unsplash.com/*",
    "https://picsum.photos/*",
    "https://hacker-news.firebaseio.com/*",
    "https://www.reddit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Post Generator",
    "default_icon": {
        "16": "/public/icon16.png",
        "48": "/public/icon48.png",
        "128": "/public/icon128.png"
      }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "public/icon16.png", "public/icon48.png", "public/icon128.png"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
